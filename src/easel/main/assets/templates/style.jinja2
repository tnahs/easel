{# Extends easel/main/assets/static/main.css #}


{% from "macros.jinja2" import render_css with context %}


:root {

    {# All Pages CSS #}

    {{ render_css("--page__width", site.theme("page.width")) }}

    {# Menu CSS #}

    {{ render_css("--menu__width", site.theme("menu.width")) }}
    {{ render_css("--menu__align", site.theme("menu.align")) }}
    {{ render_css("--menu-header-image__width", site.theme("menu.header.image.width")) }}
    {{ render_css("--menu-header-image__height", site.theme("menu.header.image.height")) }}

    {# Color CSS #}

    {{ render_css("--color-accent__base", site.theme("colors.accent-base")) }}
    {{ render_css("--color-accent__light", site.theme("colors.accent-light")) }}

    {# Current page CSS #}

    {{ render_css("--gallery__column-count", site.page_current.gallery_column_count) }}
    {{ render_css("--gallery__column-width", site.page_current.gallery_column_width) }}
    {{ render_css("--gallery__column-gap", site.page_current.gallery_column_gap) }}

}