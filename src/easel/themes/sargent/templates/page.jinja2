{% from "macros.jinja2" import render_content with context %}


{% extends "base.jinja2" %}


{% block page %}

    <div id="page">

        {% if page.is_gallery %}

            <div class="gallery contents">
        {% else %}

            <div class="contents">

        {% endif %}

                {% for content in page.contents %}

                    {{ render_content(page, content, loop.index0) }}

                {% endfor %}

            </div>

    </div>

{% endblock %}